{

  "name": "Default Opener",
  "description": "Opens a link in your default browser",
  "manifest_version": 2,
  "version": "1.0",
  "icons": {
    "48": "icons/message.svg"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/message.svg"
  },

  "permissions": [
    "nativeMessaging",
    "contextMenus"
  ]

}
